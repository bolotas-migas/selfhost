[Exec]
Boot=yes
# Drop everything, grant only what OpenClaw needs
Capability=
# No root escalation inside
NoNewPrivileges=yes

[Files]
# Read-only access to selfhost repo for context
Bind=/srv/selfhost:/mnt/selfhost:ro
# Volatile journal (don't fill the disk with logs)
PrivateUsersOwnership=auto

[Network]
# Isolated network namespace with veth pair
# Outbound NAT works, no inbound ports
Private=yes
VirtualEthernet=yes
